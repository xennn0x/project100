//+------------------------------------------------------------------+
//| Init                                                             |
//+------------------------------------------------------------------+
int OnInit() {
    trade.SetExpertMagicNumber(MagicNumber);
    trade.SetTypeFillingBySymbol(_Symbol);
    
    double price = SymbolInfoDouble(_Symbol, SYMBOL_BID);
    buyLotRefPrice = price;
    sellLotRefPrice = price;
    
    needReset = InpResetOnStart;
    lastReportTime = TimeCurrent(); 

    // Init Global Variable Drawdown
    if(!GlobalVariableCheck(GV_DD_Money)) GlobalVariableSet(GV_DD_Money, 0);
    if(!GlobalVariableCheck(GV_DD_Perc)) GlobalVariableSet(GV_DD_Perc, 0);
    if(!GlobalVariableCheck(GV_DD_Time)) GlobalVariableSet(GV_DD_Time, 0);

    // Set Hari Ini sebagai hari awal (agar tidak lapor profit kemarin saat baru dipasang)
    MqlDateTime dt;
    TimeToStruct(GetWIBTime(), dt);
    lastDayWIB = dt.day;

    UpdateDashboard();
    
    string wib = TimeToString(GetWIBTime(), TIME_DATE|TIME_MINUTES) + " WIB";
    SendTelegram("✅ EA STARTED (v1.27)\nMode: Daily Reset (WIB)\nWaktu: " + wib);
    
    return(INIT_SUCCEEDED);
}

void OnDeinit(const int reason) {
   ObjectsDeleteAll(0, "P100_"); 
   SendTelegram("⛔ EA STOPPED\nProject100 dimatikan.");
}

//+------------------------------------------------------------------+
//| OnTick                                                           |
//+------------------------------------------------------------------+
void OnTick()
{
   if(StringFind(_Symbol, "XAUUSD") < 0) return;

   // 1. CEK GANTI HARI (DAILY RESET)
   CheckDailyReset();

   // 2. UPDATE DASHBOARD & DRAWDOWN
   UpdateDashboard();
   CheckMaxDrawdown(); 

   // 3. AUTO-CLEAN DUPLICATE
   RemoveDuplicateOrders();
   
   // 4. LAPORAN RUTIN
   if(TimeCurrent() - lastReportTime >= (InfoTelegram * 60)) {
      SendPeriodicReport();
      lastReportTime = TimeCurrent();
   }

   // 5. Logic Reset
   if(buyLotRefPrice == 0 || needReset) {
      InitBase();
      if(needReset) needReset = false;
      return;
   }

   double currentBid = SymbolInfoDouble(_Symbol, SYMBOL_BID);
   int currentLevel = (int)(MathRound(currentBid / JarakGrid) * JarakGrid); 

   if(currentLevel <= 0) return;

   CheckTakeProfit(currentLevel);

   if(TimeCurrent() >= lastExecutionTime + JedaAntiSpam) {
      ManageGrid(currentLevel);
   }
}

//+------------------------------------------------------------------+
//| FUNGSI CEK GANTI HARI & KIRIM LAPORAN AKHIR HARI                 |
//+------------------------------------------------------------------+
void CheckDailyReset() {
   datetime nowWIB = GetWIBTime();
   MqlDateTime dt;
   TimeToStruct(nowWIB, dt);
   
   // Jika tanggal di MT5 berubah (berarti sudah ganti hari di WIB)
   if(lastDayWIB != -1 && dt.day != lastDayWIB) {
      // Kirim Laporan Rekap Hari Kemarin SEBELUM update hari
      SendDailyRecap();
      
      // Update Hari Sekarang
      lastDayWIB = dt.day;
      
      // Refresh Dashboard (Otomatis 0 karena filternya 'Today')
      UpdateDashboard();
   }
}

//+------------------------------------------------------------------+
//| FUNGSI KIRIM LAPORAN HARIAN (RECAP)                              |
//+------------------------------------------------------------------+
void SendDailyRecap() {
   // Hitung Rentang Waktu KEMARIN (00:00 - 23:59 WIB)
   datetime nowWIB = GetWIBTime();
   MqlDateTime dt;
   TimeToStruct(nowWIB, dt);
   
   // Set ke Awal Hari Ini (00:00:00)
   dt.hour = 0; dt.min = 0; dt.sec = 0;
   datetime startOfToday = StructToTime(dt);
   
   datetime startOfYesterday = startOfToday - 86400; // Mundur 24 jam
   datetime endOfYesterday = startOfToday - 1;       // Detik sebelum hari ini
   
   // Loop History untuk cari profit KEMARIN
   HistorySelect(0, TimeCurrent()); // Load semua history dulu
   int totalDeals = HistoryDealsTotal();
   double dailyProfit = 0;
   double dailyLot = 0;
   
   for(int i=0; i<totalDeals; i++) {
      ulong ticket = HistoryDealGetTicket(i);
      if(HistoryDealGetString(ticket, DEAL_SYMBOL) != _Symbol) continue;
      if(HistoryDealGetInteger(ticket, DEAL_MAGIC) != MagicNumber) continue;
      
      // Konversi Waktu Deal Server ke WIB
      datetime dealTimeServer = (datetime)HistoryDealGetInteger(ticket, DEAL_TIME);
      datetime dealTimeWIB = dealTimeServer + (7*3600) - (TimeGMT() - TimeCurrent()); // Estimasi Offset
      // Cara paling aman: Asumsikan TimeGMT() benar
      dealTimeWIB = TimeGMT() + (7*3600) - (TimeCurrent() - dealTimeServer);
      
      // Cek apakah deal terjadi KEMARIN
      if(dealTimeWIB >= startOfYesterday && dealTimeWIB <= endOfYesterday) {
         dailyProfit += HistoryDealGetDouble(ticket, DEAL_PROFIT) + HistoryDealGetDouble(ticket, DEAL_SWAP) + HistoryDealGetDouble(ticket, DEAL_COMMISSION);
         dailyLot += HistoryDealGetDouble(ticket, DEAL_VOLUME);
      }
   }
   
   // Susun Pesan
   string tglKemarin = TimeToString(startOfYesterday, TIME_DATE);
   string wibNow = TimeToString(nowWIB, TIME_DATE|TIME_MINUTES) + " WIB";
   string status = (dailyProfit > 0) ? "Profit ✅" : "Loss ❌";
   
   string msg = "##### DAILY RECAP (TUTUP BUKU) #####\n"
              + "Tanggal : " + tglKemarin + "\n"
              + "Profit Harian : " + (dailyProfit>=0?"+$":"-$") + DoubleToString(MathAbs(dailyProfit), 2) + "\n"
              + "Volume Harian : " + DoubleToString(dailyLot, 2) + " Lot\n"
              + "Status : " + status + "\n"
              + "---------------------------\n"
              + "Saldo Akhir : $" + DoubleToString(AccountInfoDouble(ACCOUNT_BALANCE), 2) + "\n"
              + "Laporan : " + wibNow;
              
   SendTelegram(msg);
}

